<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.financemanager.app.presentation.auth.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_register"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_pinVerify"
            app:destination="@id/pinVerifyFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.financemanager.app.presentation.onboarding.OnboardingFragment"
        android:label="Welcome">
        <action
            android:id="@+id/action_onboarding_to_register"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.financemanager.app.presentation.auth.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_register_to_bankSetup"
            app:destination="@id/bankSetupFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/bankSetupFragment"
        android:name="com.financemanager.app.presentation.auth.BankSetupFragment"
        android:label="Bank Setup">
        <action
            android:id="@+id/action_bankSetup_to_pinSetup"
            app:destination="@id/pinSetupFragment"
            app:popUpTo="@id/bankSetupFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/pinSetupFragment"
        android:name="com.financemanager.app.presentation.auth.PinSetupFragment"
        android:label="Set PIN">
        <action
            android:id="@+id/action_pinSetup_to_dashboard"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/pinSetupFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/pinVerifyFragment"
        android:name="com.financemanager.app.presentation.auth.PinVerifyFragment"
        android:label="Unlock">
        <action
            android:id="@+id/action_pinVerify_to_dashboard"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/pinVerifyFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_pinVerify_to_register"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/pinVerifyFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_pinVerify_to_pinReset"
            app:destination="@id/pinResetFragment" />
    </fragment>

    <fragment
        android:id="@+id/pinResetFragment"
        android:name="com.financemanager.app.presentation.auth.PinResetFragment"
        android:label="Reset PIN">
        <action
            android:id="@+id/action_pinReset_to_dashboard"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/pinVerifyFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.financemanager.app.presentation.dashboard.DashboardFragment"
        android:label="Dashboard" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.financemanager.app.presentation.profile.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profile_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_profile_to_help"
            app:destination="@id/helpFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.financemanager.app.presentation.settings.SettingsFragment"
        android:label="Settings" />

    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.financemanager.app.presentation.transaction.TransactionFragment"
        android:label="Transactions" />

    <fragment
        android:id="@+id/budgetFragment"
        android:name="com.financemanager.app.presentation.budget.BudgetFragment"
        android:label="Budgets" />

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.financemanager.app.presentation.analytics.AnalyticsFragment"
        android:label="Analytics" />

    <fragment
        android:id="@+id/recurringFragment"
        android:name="com.financemanager.app.presentation.recurring.RecurringTransactionFragment"
        android:label="Recurring Transactions" />

    <fragment
        android:id="@+id/insightsFragment"
        android:name="com.financemanager.app.presentation.insights.InsightsFragment"
        android:label="Smart Insights" />

    <fragment
        android:id="@+id/reportsFragment"
        android:name="com.financemanager.app.presentation.reports.ReportsFragment"
        android:label="Export &amp; Reports" />

    <fragment
        android:id="@+id/goalsFragment"
        android:name="com.financemanager.app.presentation.goals.GoalsFragment"
        android:label="Savings Goals" />

    <fragment
        android:id="@+id/splitBillFragment"
        android:name="com.financemanager.app.presentation.splitbill.SplitBillFragment"
        android:label="Split Bills" />

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.financemanager.app.presentation.calendar.CalendarFragment"
        android:label="Calendar" />

    <fragment
        android:id="@+id/helpFragment"
        android:name="com.financemanager.app.presentation.help.HelpFragment"
        android:label="Help &amp; Support" />

</navigation>
