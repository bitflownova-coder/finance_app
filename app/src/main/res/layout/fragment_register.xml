<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:paddingTop="80dp"
        android:paddingBottom="32dp">

        <!-- Step indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/vault_brass" />

            <View
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:layout_marginStart="8dp"
                android:background="@color/vault_border" />

            <View
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:layout_marginStart="8dp"
                android:background="@color/vault_border" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:text="STEP 1 OF 3"
                android:textColor="@color/vault_brass_dim"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="serif"
            android:letterSpacing="-0.02"
            android:text="@string/setup_profile_title"
            android:textColor="@color/vault_parchment"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.05"
            android:text="YOUR INFO STAYS ON THIS PHONE"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="28dp"
            android:background="@color/vault_border" />

        <!-- Full Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.1"
            android:text="YOUR NAME"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="@color/vault_brass"
            app:boxStrokeWidth="1dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:hint="@string/full_name"
                android:inputType="textPersonName"
                android:textColor="@color/vault_parchment"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.1"
            android:text="PHONE NUMBER"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="@color/vault_brass"
            app:boxStrokeWidth="1dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:hint="@string/phone"
                android:inputType="phone"
                android:textColor="@color/vault_parchment"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Continue button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_vault_button_primary"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="@string/continue_text"
            android:textColor="@color/on_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="4dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:indeterminateTint="@color/vault_brass"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
