<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="28dp"
    android:paddingEnd="28dp"
    android:paddingTop="80dp"
    android:paddingBottom="32dp">

    <!-- Step indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="@color/vault_brass" />

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_marginStart="8dp"
            android:background="@color/vault_brass" />

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_marginStart="8dp"
            android:background="@color/vault_brass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.1"
            android:text="STEP 3 OF 3"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="serif"
        android:letterSpacing="-0.02"
        android:text="@string/setup_pin_title"
        android:textColor="@color/vault_parchment"
        android:textSize="32sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:text="KEEP YOUR APP SAFE WITH A 4-DIGIT PIN"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp"
        android:background="@color/vault_border" />

    <!-- PIN Entry -->
    <TextView
        android:id="@+id/tv_pin_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.1"
        android:text="ENTER PIN"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <!-- PIN dots row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <View
            android:id="@+id/dot_1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_vault_pin_dot_empty" />

        <View
            android:id="@+id/dot_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_vault_pin_dot_empty" />

        <View
            android:id="@+id/dot_3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_vault_pin_dot_empty" />

        <View
            android:id="@+id/dot_4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_vault_pin_dot_empty" />

    </LinearLayout>

    <!-- Hidden EditText for actual PIN input -->
    <EditText
        android:id="@+id/et_pin"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:alpha="0"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:importantForAutofill="no" />

    <!-- Error text -->
    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/expense_red"
        android:textSize="13sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Continue button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_set_pin"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_vault_button_primary"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.15"
        android:text="@string/set_pin"
        android:textColor="@color/on_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="4dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:indeterminateTint="@color/vault_brass"
        android:visibility="gone" />

</LinearLayout>
