<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Budget"
        android:textColor="@color/vault_parchment"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:background="@color/vault_border" />

    <!-- Budget Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.15"
        android:text="BUDGET NAME"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_budget_name"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:boxBackgroundColor="@color/surface_variant"
        app:boxCornerRadiusBottomEnd="4dp"
        app:boxCornerRadiusBottomStart="4dp"
        app:boxCornerRadiusTopEnd="4dp"
        app:boxCornerRadiusTopStart="4dp"
        app:boxStrokeColor="@color/vault_border"
        app:boxStrokeWidth="1dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_budget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/vault_parchment"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Total Budget Amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.15"
        android:text="TOTAL BUDGET"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_total_budget"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:boxBackgroundColor="@color/surface_variant"
        app:boxCornerRadiusBottomEnd="4dp"
        app:boxCornerRadiusBottomStart="4dp"
        app:boxCornerRadiusTopEnd="4dp"
        app:boxCornerRadiusTopStart="4dp"
        app:boxStrokeColor="@color/vault_border"
        app:boxStrokeWidth="1dp"
        app:hintEnabled="false"
        app:prefixText="â‚¹ "
        app:prefixTextColor="@color/vault_brass_dim">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_total_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/vault_parchment"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Category -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.15"
        android:text="CATEGORY"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_category"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:boxBackgroundColor="@color/surface_variant"
        app:boxCornerRadiusBottomEnd="4dp"
        app:boxCornerRadiusBottomStart="4dp"
        app:boxCornerRadiusTopEnd="4dp"
        app:boxCornerRadiusTopStart="4dp"
        app:boxStrokeColor="@color/vault_border"
        app:boxStrokeWidth="1dp"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/et_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:inputType="none"
            android:textColor="@color/vault_parchment"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Period -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.15"
        android:text="PERIOD"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_period"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:boxBackgroundColor="@color/surface_variant"
        app:boxCornerRadiusBottomEnd="4dp"
        app:boxCornerRadiusBottomStart="4dp"
        app:boxCornerRadiusTopEnd="4dp"
        app:boxCornerRadiusTopStart="4dp"
        app:boxStrokeColor="@color/vault_border"
        app:boxStrokeWidth="1dp"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/et_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:inputType="none"
            android:textColor="@color/vault_parchment"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Alert Threshold -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="ALERT THRESHOLD"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_threshold_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="80%"
            android:textColor="@color/vault_brass"
            android:textSize="13sp" />

    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stepSize="5"
        android:valueFrom="50"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:thumbColor="@color/vault_brass"
        app:tickColorActive="@color/vault_brass"
        app:tickColorInactive="@color/vault_steel"
        app:trackColorActive="@color/vault_brass"
        app:trackColorInactive="@color/vault_steel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/vault_border" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:paddingHorizontal="16dp"
            android:text="CANCEL"
            android:textColor="@color/on_surface_variant"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_vault_button_primary"
            android:gravity="center"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.15"
                android:text="SAVE"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
