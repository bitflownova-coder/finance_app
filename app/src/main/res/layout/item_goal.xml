<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_vault_card"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Icon and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_vault_icon_container">

            <TextView
                android:id="@+id/tv_goal_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                tools:text="ðŸ " />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/vault_parchment"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="New Home" />

            <TextView
                android:id="@+id/tv_goal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="2"
                android:textColor="@color/on_surface_variant"
                android:textSize="13sp"
                tools:text="Down payment for apartment" />

        </LinearLayout>

        <TextView
            android:id="@+id/chip_priority"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_vault_icon_container"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/vault_brass"
            android:textSize="9sp"
            tools:text="HIGH" />

    </LinearLayout>

    <!-- Category -->
    <TextView
        android:id="@+id/chip_category"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_vault_icon_container"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:letterSpacing="0.08"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/on_surface_variant"
        android:textSize="10sp"
        tools:text="HOME/PROPERTY" />

    <!-- Amount Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_current_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textColor="@color/vault_brass"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="â‚¹65,000" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="monospace"
            android:textColor="@color/vault_parchment"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="65%" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_target_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="monospace"
        android:textColor="@color/on_surface_variant"
        android:textSize="12sp"
        tools:text="of â‚¹1,00,000" />

    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="65"
        app:indicatorColor="@color/vault_brass"
        app:trackColor="@color/vault_steel"
        app:trackCornerRadius="2dp"
        app:trackThickness="6dp" />

    <TextView
        android:id="@+id/tv_remaining_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        android:textColor="@color/on_surface_variant"
        android:textSize="11sp"
        tools:text="â‚¹35,000 to go" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:background="@color/vault_border" />

    <!-- Timeline -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_target_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:fontFamily="monospace"
            android:textColor="@color/on_surface_variant"
            android:textSize="11sp"
            tools:text="Target: Dec 31, 2026" />

        <TextView
            android:id="@+id/tv_days_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:text="15 days left" />

    </LinearLayout>

    <!-- Monthly Suggestion -->
    <TextView
        android:id="@+id/tv_monthly_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="monospace"
        android:textColor="@color/vault_brass"
        android:textSize="11sp"
        tools:text="Suggested: â‚¹5,000/month" />

    <!-- Action Button -->
    <LinearLayout
        android:id="@+id/btn_contribute"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_vault_button_ghost"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="ADD CONTRIBUTION"
            android:textColor="@color/vault_brass"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
