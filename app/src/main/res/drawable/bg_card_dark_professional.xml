<?xml version="1.0" encoding="utf-8"?>
<!-- Professional Card - Dark Theme (Black with subtle border) -->
<layer-list xmlns:android="http://schemas.android.com/2000/android:00">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1C1C1E" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#3C3C3C" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
