<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ==================== VAULT — Dark Banking Terminal Theme ==================== -->
    <style name="Base.Theme.FinanceManager" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Brass accent on gunmetal -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- Oxidized copper secondary -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>

        <!-- Status bar — fused with background -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>

        <!-- Error — terracotta -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Widget overrides -->
        <item name="materialCardViewStyle">@style/Widget.Vault.CardView</item>
        <item name="materialButtonStyle">@style/Widget.Vault.Button</item>
        <item name="textInputStyle">@style/Widget.Vault.TextInputLayout</item>
        <item name="chipStyle">@style/Widget.Vault.Chip</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.FinanceManager" parent="Base.Theme.FinanceManager" />

    <!-- Splash Screen Theme -->
    <style name="Theme.FinanceManager.Splash" parent="Theme.FinanceManager">
        <item name="android:windowBackground">@drawable/splash_layout</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- ==================== VAULT WIDGETS ==================== -->

    <!-- Cards — minimal elevation, structural borders -->
    <style name="Widget.Vault.CardView" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/surface_variant</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/vault_border</item>
        <item name="contentPadding">0dp</item>
    </style>

    <!-- Buttons — brass fill, sharp corners -->
    <style name="Widget.Vault.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Text Input — thin border, monospace hint -->
    <style name="Widget.Vault.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
    </style>

    <!-- Chips — muted, structural -->
    <style name="Widget.Vault.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/primary_container</item>
        <item name="android:textColor">@color/on_primary_container</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="chipStrokeColor">@color/vault_border_warm</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- ==================== TYPOGRAPHY STYLES ==================== -->

    <!-- Base text style -->
    <style name="Vault.Text" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/vault_parchment</item>
    </style>

    <!-- Display — serif, large, letter-spaced tight -->
    <style name="Vault.Text.Display">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/vault_parchment</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Section Label — condensed, uppercase, tracked wide -->
    <style name="Vault.Text.SectionLabel">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/vault_brass_dim</item>
    </style>

    <!-- Monospace Amount — terminal feel -->
    <style name="Vault.Text.Amount">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vault_parchment</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Body text -->
    <style name="Vault.Text.Body">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <!-- Caption -->
    <style name="Vault.Text.Caption">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- FAB — square-ish, industrial -->
    <style name="ShapeAppearance.Vault.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Toolbar — flat, vault style -->
    <style name="Widget.Vault.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="titleTextColor">@color/vault_parchment</item>
        <item name="titleTextAppearance">@style/Vault.Text.ToolbarTitle</item>
    </style>

    <style name="Vault.Text.ToolbarTitle">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
