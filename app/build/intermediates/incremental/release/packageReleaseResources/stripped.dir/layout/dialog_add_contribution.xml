<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Add Contribution"
        android:textColor="@color/vault_parchment"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/vault_border" />

    <!-- Goal Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_vault_card_warm"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/tv_goal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.1"
            android:textColor="@color/vault_parchment"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="NEW HOME" />

        <TextView
            android:id="@+id/tv_current_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="monospace"
            android:textColor="@color/vault_brass"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="₹65,000" />

        <TextView
            android:id="@+id/tv_remaining_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="monospace"
            android:textColor="@color/on_surface_variant"
            android:textSize="12sp"
            tools:text="₹35,000 remaining" />

    </LinearLayout>

    <!-- Quick Amount Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.15"
        android:text="QUICK AMOUNT"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <!-- Quick Amount Buttons as vault tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_quick_1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_vault_tab_unselected"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textColor="@color/vault_parchment"
            android:textSize="11sp"
            tools:text="₹5,000" />

        <TextView
            android:id="@+id/btn_quick_2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_vault_tab_unselected"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textColor="@color/vault_parchment"
            android:textSize="11sp"
            tools:text="₹8,750" />

        <TextView
            android:id="@+id/btn_quick_3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_vault_tab_unselected"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textColor="@color/vault_parchment"
            android:textSize="11sp"
            tools:text="₹17,500" />

        <TextView
            android:id="@+id/btn_quick_4"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_vault_tab_unselected"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textColor="@color/vault_parchment"
            android:textSize="11sp"
            tools:text="₹35,000" />

    </LinearLayout>

    <!-- Amount Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.15"
        android:text="AMOUNT"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_amount"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:boxBackgroundColor="@color/surface_variant"
        app:boxCornerRadiusBottomEnd="4dp"
        app:boxCornerRadiusBottomStart="4dp"
        app:boxCornerRadiusTopEnd="4dp"
        app:boxCornerRadiusTopStart="4dp"
        app:boxStrokeColor="@color/vault_border"
        app:boxStrokeWidth="1dp"
        app:hintEnabled="false"
        app:prefixText="₹ "
        app:prefixTextColor="@color/vault_brass_dim">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/vault_parchment"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Note Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.15"
        android:text="NOTE (OPTIONAL)"
        android:textColor="@color/vault_brass_dim"
        android:textSize="11sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_note"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:boxBackgroundColor="@color/surface_variant"
        app:boxCornerRadiusBottomEnd="4dp"
        app:boxCornerRadiusBottomStart="4dp"
        app:boxCornerRadiusTopEnd="4dp"
        app:boxCornerRadiusTopStart="4dp"
        app:boxStrokeColor="@color/vault_border"
        app:boxStrokeWidth="1dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:inputType="textCapSentences"
            android:maxLines="2"
            android:textColor="@color/vault_parchment"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/vault_border" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:paddingHorizontal="16dp"
            android:text="CANCEL"
            android:textColor="@color/on_surface_variant"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_vault_button_primary"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.15"
                android:text="ADD CONTRIBUTION"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
