<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_vault_card"
    android:layout_marginBottom="6dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="14dp">

    <!-- Category Icon -->
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_vault_icon_container">

        <TextView
            android:id="@+id/tv_category_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="ðŸ”" />
    </FrameLayout>

    <!-- Transaction Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/vault_parchment"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Lunch at Restaurant" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.08"
            android:textSize="11sp"
            android:textColor="@color/on_surface_variant"
            tools:text="FOOD AND DINING" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="monospace"
            android:textSize="10sp"
            android:textColor="@color/vault_brass_dim"
            tools:text="Today, 2:30 PM" />

    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/vault_parchment"
        tools:text="- â‚¹500" />

</LinearLayout>
