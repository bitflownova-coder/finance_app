<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Transaction"
            android:textColor="@color/vault_parchment"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:background="@color/vault_border" />

        <!-- Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="AMOUNT"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_amount"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/surface_variant"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeColor="@color/vault_border"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false"
            app:prefixText="â‚¹ "
            app:prefixTextColor="@color/vault_brass_dim">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/vault_parchment"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Transaction Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="TYPE"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_transaction_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/surface_variant"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeColor="@color/vault_border"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/act_transaction_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@color/vault_parchment"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="CATEGORY"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_category"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/surface_variant"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeColor="@color/vault_border"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/act_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@color/vault_parchment"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Budget -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="BUDGET (OPTIONAL)"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_budget"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/surface_variant"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeColor="@color/vault_border"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/act_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@color/vault_parchment"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Account -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="ACCOUNT"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_account"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/surface_variant"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeColor="@color/vault_border"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/act_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@color/vault_parchment"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="DESCRIPTION"
            android:textColor="@color/vault_brass_dim"
            android:textSize="11sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_description"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/surface_variant"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeColor="@color/vault_border"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:inputType="textCapSentences"
                android:maxLines="3"
                android:textColor="@color/vault_parchment"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Split Bill Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_vault_card"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- Split Bill Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.1"
                    android:text="SPLIT THIS BILL"
                    android:textColor="@color/vault_parchment"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_split_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/vault_brass"
                    app:trackTint="@color/vault_steel" />

            </LinearLayout>

            <!-- Split Details (Hidden by default) -->
            <LinearLayout
                android:id="@+id/layout_split_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Split Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.15"
                    android:text="SPLIT TYPE"
                    android:textColor="@color/vault_brass_dim"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_split_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundColor="@color/surface_variant"
                    app:boxCornerRadiusBottomEnd="4dp"
                    app:boxCornerRadiusBottomStart="4dp"
                    app:boxCornerRadiusTopEnd="4dp"
                    app:boxCornerRadiusTopStart="4dp"
                    app:boxStrokeColor="@color/vault_border"
                    app:boxStrokeWidth="1dp"
                    app:hintEnabled="false">

                    <AutoCompleteTextView
                        android:id="@+id/act_split_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:inputType="none"
                        android:maxLines="1"
                        android:textColor="@color/vault_parchment"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Participants Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.15"
                    android:text="PARTICIPANTS"
                    android:textColor="@color/vault_brass_dim"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layout_participants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- Add Participant -->
                <TextView
                    android:id="@+id/btn_add_participant"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_vault_button_ghost"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="+ ADD PARTICIPANT"
                    android:textColor="@color/vault_brass"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Receipt Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_vault_card"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:text="ATTACH RECEIPT"
                android:textColor="@color/vault_parchment"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- Receipt preview (hidden by default) -->
            <LinearLayout
                android:id="@+id/card_receipt_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_vault_card_warm"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_receipt_thumbnail"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="Receipt thumbnail"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_receipt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Receipt attached"
                        android:textColor="@color/vault_parchment"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Tap to view"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="11sp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/btn_remove_receipt"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_vault_icon_container">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:contentDescription="Remove"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/expense_red" />

                </FrameLayout>

            </LinearLayout>

            <!-- Attach buttons -->
            <LinearLayout
                android:id="@+id/layout_attach_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_attach_camera"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_vault_button_ghost"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="CAMERA"
                    android:textColor="@color/vault_brass"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btn_attach_gallery"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_vault_button_ghost"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="GALLERY"
                    android:textColor="@color/vault_brass"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/vault_border" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingHorizontal="16dp"
                android:text="CANCEL"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_vault_button_primary"
                android:gravity="center"
                android:paddingHorizontal="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.15"
                    android:text="SAVE"
                    android:textColor="@color/on_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
