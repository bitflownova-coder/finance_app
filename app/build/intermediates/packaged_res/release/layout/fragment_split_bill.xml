<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.splitbill.SplitBillFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:text="SPLIT BILLS"
            android:textColor="@color/vault_parchment"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical">

        <!-- Summary Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_vault_card_warm"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Unsettled -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:letterSpacing="0.15"
                        android:text="UNSETTLED"
                        android:textColor="@color/vault_brass_dim"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_total_unsettled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/vault_brass"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="â‚¹3,200.00" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/vault_border" />

                <!-- Pending Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:letterSpacing="0.15"
                        android:text="PENDING"
                        android:textColor="@color/vault_brass_dim"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_pending_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/vault_parchment"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="4" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Filter Chips (as text tabs) -->
        <LinearLayout
            android:id="@+id/chip_group_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chip_all"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/bg_vault_tab_selected"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="ALL"
                android:textColor="@color/vault_brass"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chip_pending"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_vault_tab_unselected"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="PENDING"
                android:textColor="@color/on_surface_variant"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/chip_settled"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_vault_tab_unselected"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="SETTLED"
                android:textColor="@color/on_surface_variant"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_split_bills"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingHorizontal="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="80dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_split_bill" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/text_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="40dp"
            android:text="@string/no_split_bills"
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/vault_brass"
            android:visibility="gone" />

    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:contentDescription="@string/add_split_bill"
        app:backgroundTint="@color/vault_brass"
        app:shapeAppearance="@style/ShapeAppearance.Vault.FAB"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/on_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
